<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_photo"
    tools:context=".TripNTip.SignInActivity">


    <ImageView
        android:id="@+id/icon"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="120dp"
        android:src="@drawable/icon" />

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/icon"
        android:layout_marginStart="@dimen/AddTripMarginLeft"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="@dimen/AddTripMarginTop"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/rounded"
        android:cursorVisible="true"
        android:drawablePadding="25dp"
        android:paddingStart="@dimen/AddTripDrawablePadding"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:hint="@string/EmailExample"
        android:textColor="@color/textColor"
        android:textCursorDrawable="@null"
        android:textSize="@dimen/TextSize" />


    <EditText
        android:id="@+id/Password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/email"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="@dimen/AddTripMarginRight"
        android:background="@drawable/rounded"
        android:cursorVisible="true"
        android:drawablePadding="25dp"
        android:inputType="textPassword"
        android:paddingStart="@dimen/AddTripDrawablePadding"
        android:paddingLeft="@dimen/AddTripDrawablePadding"
        android:hint="@string/PasswordExample"
        android:textColor="@color/textColor"
        android:textSize="@dimen/TextSize" />

    <Button
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/Password"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/Login"
        android:fontFamily="#ans-serif"
        android:text="@string/Login"
        android:textColor="@color/textColor"
        android:textSize="@dimen/TextSize"
        android:textStyle="normal|bold" />


    <TextView
        android:id="@+id/signIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/login"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="30dp"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_horizontal"
        android:onClick="SignUp"
        android:text="@string/SignUpFromLoginLabel"
        android:textAlignment="center"
        android:textColor="@color/signIn"
        android:textSize="@dimen/TextSize" />

</RelativeLayout>